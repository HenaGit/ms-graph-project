@model NETCoreMVCwithMSGraph.Models.Profile
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <h1>User Profile</h1>
    <br />
    @if ((User.Identity?.IsAuthenticated == true))
    {
        <h4>
            @if (Model.UserPhoto != null)
            {
                <img src="data:image/jpeg;base64, @Model.UserPhoto" class="user-photo nav-profile-photo rounded-circle align-self-center mr-2" />
            }
            Welcome @Model.UserDisplayName!
        </h4>
    }
    else
    {
        <a class="btn btn-primary btn-large" href="https://localhost:7004/signin-oidc">Click here to sign in</a>
    }
</div>


